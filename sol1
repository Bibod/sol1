using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace sol1
{
    class Program
    {
        static void Main(string[] args)
        {
            float a, b, x;
            Console.WriteLine("Intruduceti a =");
            a = float.Parse(Console.ReadLine());
            Console.WriteLine("Introduceti b =");
            b = float.Parse(Console.ReadLine());
            if (a == 0)
                if (b == 0)
                    Console.WriteLine("Ecuatie nedeterminata ");
                else
                    Console.WriteLine("Ecuatie indisponibila");
            else
            {
                x = -b / a;
                Console.WriteLine("solutia este x ={0} ", x);

            }
            Console.ReadKey();  
        }
    }
}
